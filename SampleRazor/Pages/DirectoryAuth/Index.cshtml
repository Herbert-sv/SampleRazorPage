@page "/blank"
@model LoginPageModel
@{
    Layout = null;
    ViewData["Title"] = "Herbert-sv/SampleRazorPages";
}

<title>@ViewData["Title"]</title>
<head>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="nav navbar-nav navbar-right" style="padding-top:15px; font-size:15px">
            <a href="https://github.com/herbert-sv" style="text-decoration-line:none; color:cyan"target="_blank">Contact Support</a>
        </div>
    </div>
</nav>
<br />
<br />

<h2 class="text-info">Directory Phone Book</h2>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <div class="panel panel-primary " style="box-shadow:5px 5px 5px gray;">
                <div class="panel-heading">
                    <div class="panel-title">Enter Credentials</div>
                </div>
                <div class="panel-body">
                    <div class="col-md-4">
                        <form asp-page-handler="Inquiry" method="post" class="form-horizontal">
                            <div class="form-group">
                                <label for="UserName">User Name</label>
                                <input type="text" class="form-control" name="RazorUserName" autofocus />
                            </div>

                            <div class="form-group">
                                <label for="Password">Password</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input type="password" class="form-control" name="RazorPassword" />
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="#" target="_blank" class="text-primary">Forgot Password or UserName ??</a>
                    <p class="text-danger">@ViewData["error"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />

<footer>
    <p class="well text-primary">
        &copy; 2020 <a href="https://github.com/herbert-sv" target="_blank">Herbert-sv/SampleRazorPages</a>
    </p>
</footer>



